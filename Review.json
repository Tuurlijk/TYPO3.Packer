{
  "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs": true
  },
  "variables": {
    "atlas_username": "{{env `ATLAS_USERNAME`}}",
    "atlas_name": "{{env `ATLAS_NAME`}}"
  },
  "provisioners": [
    {
      "environment_vars": [
        "BOX_TYPE={{user `box_type`}}",
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/update.sh",
        "scripts/vagrant.sh",
        "scripts/sshd.sh",
        "scripts/vmtool.sh"
      ],
      "type": "shell"
    },
    {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/{{user `atlas_name`}}.yml",
      "role_paths": [
        "ansible/roles/common",
        "ansible/roles/composer",
        "ansible/roles/geerlingguy.java",
        "ansible/roles/elasticsearch",
        "ansible/roles/elasticsearch-configure",
        "ansible/roles/hhvm",
        "ansible/roles/mariadb",
        "ansible/roles/memcached",
        "ansible/roles/neos",
        "ansible/roles/nginx",
        "ansible/roles/nodejs",
        "ansible/roles/php-ondrej",
        "ansible/roles/phpbrew",
        "ansible/roles/phpcommon",
        "ansible/roles/redis",
        "ansible/roles/typo3",
        "ansible/roles/typo3-review"
      ]
    },
    {
      "environment_vars": [
        "BOX_TYPE={{user `box_type`}}",
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/minimize.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz auto",
        " auto-install/enable=true",
        " debconf/priority=critical",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=us",
        " console-setup/modelcode=pc105",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US",
        " fb=false",
        " initrd=/install/initrd.gz",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA",
        " keyboard-configuration/variant=USA",
        " locale=en_US",
        " netcfg/get_domain=vm",
        " netcfg/get_hostname={{ user `hostname` }}",
        " noapic",
        " passwd/user-fullname={{ user `ssh_fullname` }}",
        " passwd/user-password={{ user `ssh_password` }}",
        " passwd/user-password-again={{ user `ssh_password` }}",
        " passwd/username={{ user `ssh_username` }}",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- ",
        "<enter>"
      ],
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "boot_wait": "10s",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "iso_interface": "sata",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "30m",
      "ssh_port": 22,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory_size` }}"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz auto",
        " auto-install/enable=true",
        " debconf/priority=critical",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=us",
        " console-setup/modelcode=pc105",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US",
        " fb=false",
        " initrd=/install/initrd.gz",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA",
        " keyboard-configuration/variant=USA",
        " locale=en_US",
        " netcfg/get_domain=vm",
        " netcfg/get_hostname={{ user `hostname` }}",
        " noapic",
        " passwd/user-fullname={{ user `ssh_fullname` }}",
        " passwd/user-password={{ user `ssh_password` }}",
        " passwd/user-password-again={{ user `ssh_password` }}",
        " passwd/username={{ user `ssh_username` }}",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- ",
        "<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "Ubuntu-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "30m",
      "ssh_port": 22,
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "memsize": "{{ user `memory_size` }}"
      }
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "{{user `compression_level`}}",
        "override": {
          "vmware": {
            "compression_level": 0
          }
        },
        "keep_input_artifact": false,
        "output": "box/{{.Provider}}/ubuntu1404-{{user `box_type`}}-{{user `version`}}.box"
      },
      {
        "type": "atlas",
        "only": [
          "vmware-iso"
        ],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "vmware_desktop",
          "version": "{{user `version`}}"
        }
      },
      {
        "type": "atlas",
        "only": [
          "virtualbox-iso"
        ],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "{{user `version`}}"
        }
      }
    ]
  ],
  "variables": {
    "atlas_username": "Michiel",
    "atlas_name": "Review",
    "box_type": "Review",
    "cleanup_pause": "",
    "compression_level": "7",
    "custom_script": ".",
    "disk_size": "40690",
    "memory_size": "1024",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "headless": "true",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "install_vagrant_key": "true",
    "iso_checksum": "07e4bb5569814eab41fafac882ba127893e3ff0bdb7ec931c9b2d040e3e94e7a",
    "iso_name": "ubuntu-14.04.4-server-amd64.iso",
    "iso_path": "iso",
    "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.4-server-amd64.iso",
    "no_proxy": "{{env `no_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "hostname": "vagrant",
    "ssh_fullname": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "false",
    "version": "0.1.41"
  }
}
